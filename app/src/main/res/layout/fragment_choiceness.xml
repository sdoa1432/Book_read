<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.yuexun.book_read.view.custom.TwoSwitvhButton
                android:id="@+id/title_two_button"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp" />

            <Button
                android:id="@+id/main_search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:background="@mipmap/search" />

            <Button
                android:id="@+id/library"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/main_search"
                android:background="@mipmap/bookcase" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/choiceness_gray" />

        <cn.bingoogolapple.bgabanner.BGABanner
            android:id="@+id/main_banner"
            style="@style/BannerDefaultStyle"
            android:layout_width="match_parent"
            android:layout_height="160dp" />

        <LinearLayout
            android:id="@+id/ranking"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/menu1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:src="@mipmap/ranking" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/menu1"
                android:gravity="center"
                android:text="人气榜单"
                android:textColor="#000000"
                android:textSize="17dp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/choiceness_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/main_hot_left_red"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:src="@mipmap/red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/main_hot_left_red"
                android:paddingLeft="10dp"
                android:text="重磅推荐"
                android:textColor="@color/dark"
                android:textSize="23dp" />
        </RelativeLayout>

        <com.yuexun.book_read.view.custom.BookMsgView
            android:id="@+id/main_hot_bookmsg"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <com.yuexun.book_read.view.custom.OneWordsExplainView
            android:id="@+id/hot_one_explain_1"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp" />

        <com.yuexun.book_read.view.custom.OneWordsExplainView
            android:id="@+id/hot_one_explain_2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <com.yuexun.book_read.view.custom.OneWordsExplainView
            android:id="@+id/hot_one_explain_3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <com.yuexun.book_read.view.custom.OneWordsExplainView
            android:id="@+id/hot_one_explain_4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <com.yuexun.book_read.view.custom.OneWordsExplainView
            android:id="@+id/hot_one_explain_5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <com.yuexun.book_read.view.custom.OneWordsExplainView
            android:id="@+id/hot_one_explain_6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/divide_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/main_book_first_left_red"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:src="@mipmap/red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/main_book_first_left_red"
                android:paddingLeft="10dp"
                android:text="新书抢鲜"
                android:textColor="@color/dark"
                android:textSize="23dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <com.yuexun.book_read.view.custom.BookCoverView
                android:id="@+id/book_first_1"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1" />

            <com.yuexun.book_read.view.custom.BookCoverView
                android:id="@+id/book_first_2"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1" />

            <com.yuexun.book_read.view.custom.BookCoverView
                android:id="@+id/book_first_3"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1" />

        </LinearLayout>

        <com.yuexun.book_read.view.custom.OneWordsExplainView
            android:id="@+id/book_first_4"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp" />

        <com.yuexun.book_read.view.custom.OneWordsExplainView
            android:id="@+id/book_first_5"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <com.yuexun.book_read.view.custom.OneWordsExplainView
            android:id="@+id/book_first_6"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/divide_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/main_recommend_left_red"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:src="@mipmap/red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/main_recommend_left_red"
                android:paddingLeft="10dp"
                android:text="编辑推荐"
                android:textColor="@color/dark"
                android:textSize="23dp" />
        </RelativeLayout>

        <com.yuexun.book_read.view.custom.BookMsgView
            android:id="@+id/main_recommend1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp" />

        <com.yuexun.book_read.view.custom.BookMsgView
            android:id="@+id/main_recommend2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp" />

        <com.yuexun.book_read.view.custom.BookMsgView
            android:id="@+id/main_recommend3"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/divide_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/main_active_demand_left_red"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:src="@mipmap/red" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_toRightOf="@+id/main_active_demand_left_red"
                android:paddingLeft="10dp"
                android:text="畅销精品"
                android:textColor="@color/dark"
                android:textSize="23dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <com.yuexun.book_read.view.custom.BookCoverView
                android:id="@+id/active_demand_BookCover_1"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1" />

            <com.yuexun.book_read.view.custom.BookCoverView
                android:id="@+id/active_demand_BookCover_2"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1" />

            <com.yuexun.book_read.view.custom.BookCoverView
                android:id="@+id/active_demand_BookCover_3"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <com.yuexun.book_read.view.custom.BookCoverView
                android:id="@+id/active_demand_BookCover_4"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1" />

            <com.yuexun.book_read.view.custom.BookCoverView
                android:id="@+id/active_demand_BookCover_5"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1" />

            <com.yuexun.book_read.view.custom.BookCoverView
                android:id="@+id/active_demand_BookCover_6"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>