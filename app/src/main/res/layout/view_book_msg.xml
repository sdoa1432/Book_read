<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/bookimg"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">


        <TextView
            android:id="@+id/bookname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:paddingLeft="8dp"
            android:textColor="@color/gray"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/bookintroduction"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_below="@+id/bookname"
            android:ellipsize="end"
            android:maxLines="4"
            android:padding="8dp"
            android:textColor="@color/midgray"
            android:textSize="13dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/bookintroduction">

            <TextView
                android:id="@+id/booknum"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:background="@drawable/background_book_summary_green"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/green"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/bookstatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/booknum"
                android:background="@drawable/background_book_summary_red"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/red"
                android:textSize="8dp" />

            <TextView
                android:id="@+id/booktype"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@id/bookstatus"
                android:background="@drawable/background_book_summary_gray"
                android:gravity="center"
                android:padding="2dp"
                android:textColor="@color/midgray"
                android:textSize="8dp" />

        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>