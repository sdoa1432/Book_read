<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:gravity="center"
            android:text="书库"
            android:textColor="@color/dark"
            android:textSize="20dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1caca" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:scaleType="center"
                android:src="@mipmap/classify" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="41dp"
                android:layout_toRightOf="@+id/img"
                android:gravity="bottom"
                android:padding="0dp"
                android:text="测试"
                android:textColor="@color/dark"
                android:textSize="18dp" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_toRightOf="@+id/img"
                zhy:max_select="1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:scaleType="center"
                android:src="@mipmap/type" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_toRightOf="@+id/img"
                android:gravity="bottom"
                android:text="分类"
                android:textColor="@color/dark"
                android:textSize="18dp" />


            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/library_classify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/img"
                zhy:max_select="1" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:scaleType="center"
                android:src="@mipmap/progress" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_toRightOf="@+id/img"
                android:gravity="bottom"
                android:text="进度"
                android:textColor="@color/dark"
                android:textSize="18dp" />


            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/library_updatestatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/img"
                zhy:max_select="1" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:scaleType="center"
                android:src="@mipmap/attribute" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_toRightOf="@+id/img"
                android:gravity="bottom"
                android:text="属性"
                android:textColor="@color/dark"
                android:textSize="18dp" />


            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/library_property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/img"
                zhy:max_select="1" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                android:scaleType="center"
                android:src="@mipmap/sorting" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_toRightOf="@+id/img"
                android:gravity="bottom"
                android:text="排序"
                android:textColor="@color/dark"
                android:textSize="18dp" />


            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/library_sort"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_toRightOf="@+id/img"
                zhy:max_select="1" />
        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#d1caca" />

        <ListView
            android:id="@+id/lirary_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:divider="@null" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1caca" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/result_previous"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_normal"
                android:text="上一页" />

            <TextView
                android:id="@+id/result_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/dark"
                android:textSize="16dp" />

            <Button
                android:id="@+id/result_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_normal"
                android:text="下一页" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
