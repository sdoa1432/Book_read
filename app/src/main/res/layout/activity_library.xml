<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="书库"
            android:background="@color/colorPrimary"
            android:textColor="@color/dark"
            android:textSize="23dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1caca" />

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="25dp"-->
        <!--android:paddingLeft="5dp"-->
        <!--android:text="类型"-->
        <!--android:textColor="@color/gray"-->
        <!--android:textSize="18dp" />-->


        <!--<com.zhy.view.flowlayout.TagFlowLayout-->
        <!--android:id="@+id/library_type"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:padding="5dp"-->
        <!--zhy:max_select="1" />-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="5dp"
            android:text="分类"
            android:textColor="@color/gray"
            android:textSize="18dp" />


        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/library_classify"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            zhy:max_select="1" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1caca" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="5dp"
            android:text="进度"
            android:textColor="@color/gray"
            android:textSize="18dp" />


        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/library_updatestatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            zhy:max_select="1" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1caca" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="5dp"
            android:text="属性"
            android:textColor="@color/gray"
            android:textSize="18dp" />


        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/library_property"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            zhy:max_select="1" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1caca" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:paddingLeft="5dp"
            android:text="排序"
            android:textColor="@color/gray"
            android:textSize="18dp" />


        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/library_sort"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            zhy:max_select="1" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1caca" />

        <ListView
            android:id="@+id/lirary_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:layout_marginBottom="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#d1caca" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/result_previous"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_normal"
                android:text="上一页" />

            <TextView
                android:id="@+id/result_page"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/dark"
                android:textSize="16dp" />

            <Button
                android:id="@+id/result_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_normal"
                android:text="下一页" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
